                </field>
                <field>
                    <name>ISIN</name>
                    <data>cnd-isin</data>
                </field>
                <field>
                    <name>FTCode</name>
                    <data>cnd-no</data>
                </field>
                <field>
                    <name>Symbol</name>
                    <data>ticker-symbol</data>
                </field>
                <field>
                    <name>Exchange-Code</name>
                    <data></data>
                </field>
                <field>
                    <name>Exchange-Country</name>
                    <data>ticker-symbol</data>
                </field>
                <field>
                    <name>Version</name>
                    <data></data>
                </field>
